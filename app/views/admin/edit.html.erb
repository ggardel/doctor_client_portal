<div class = "patient">
<h1>Edit Patient Info!</h1>

<%= form_tag("/admin/#{@patient_infos.user_id}/update", method: "patch")  do  %>

    <div>
        <%= label_tag :name %>
        <%= text_field_tag :name, @patient_infos.name %>
    </div>

    <div>
        <%= label_tag :age %>
        <%= text_field_tag :age, @patient_infos.age %>
    </div>

    <div>
        <%= label_tag :gender %>
        <%= text_field_tag :gender, @patient_infos.gender %>
    </div>

    <div>
        <%= label_tag :address %>
        <%= text_field_tag :address, @patient_infos.address %>
    </div>

    <div>
        <%= label_tag :contact %>
        <%= text_field_tag :contact, @patient_infos.contact %>
    </div>

    <div>
        <%= label_tag :health_insurance %>
        <%= text_field_tag :health_insurance, @patient_infos.health_insurance %>
    </div>

    <div>
        <%= label_tag :primary_doctor %>
        <%= text_field_tag :primary_doctor, @patient_infos.primary_doctor%>
    </div>
</br>
    <%= submit_tag "Submit these changes!" %>

<% end %>
</br>
<button type="button" class="btn btn-default">
<%= link_to "Back", show_user_path %></button>
</br></br>
<button type="button" class="btn btn-default">
<%= link_to "Back to Patient list!", admin_index_path %></button>
</br>
</div>
